<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/job"
    android:padding="20dp"
    tools:context=".job">

    <EditText
        android:id="@+id/ja1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="35dp" />

    <EditText
        android:id="@+id/ja2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ja1"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Age"
        android:inputType="number"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="104dp" />

    <EditText
        android:id="@+id/jg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ja2"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="gender"
        android:inputType="text"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="104dp" />


    <EditText
        android:id="@+id/jp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jg1"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Ph.No"
        android:inputType="phone"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="237dp" />

    <EditText
        android:id="@+id/jst1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jp1"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="State"
        android:inputType="textPersonName"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="395dp" />

    <EditText
        android:id="@+id/jcit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jst1"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="City"
        android:inputType="textPersonName"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="468dp" />

    <EditText
        android:id="@+id/jpin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jcit1"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="PinCode"
        android:inputType="number"
        android:maxEms="6"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="543dp" />
    <EditText
        android:id="@+id/jdes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jpin1"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Designation"
        android:inputType="textPersonName"
        android:maxEms="6"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="543dp" />
    <EditText
        android:id="@+id/jbew1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jdes1"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Before Working"
        android:inputType="textPersonName"
        android:maxEms="6"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="543dp" />

    <Button
        android:id="@+id/jbt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jbew1"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:text="Submit"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill the form for Job."
        android:textColor="@android:color/holo_orange_light"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>